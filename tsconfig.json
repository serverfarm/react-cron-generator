{
  "compilerOptions": {
    "esModuleInterop": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "strict": true,
    "target": "es2020",
    "module": "commonjs",
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "jsx": "react",
    "outDir": "./dist"
  },
  "include": ["src/*.tsx", "src/*.css"],
  "exclude": ["dist/", "node_modules/", "**/*.spec.tsx"]
}
